<resources>
    <attr name="iconColor" format="reference"/>
    <attr name="windowBackground" format="reference"/>

    <style name="ThemeBaseLight" parent="@style/PreferenceFixTheme.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="iconColor">@color/widget_button</item>
        <item name="windowBackground">@color/widget_background</item>
    </style>


    <style name="ActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="AppThemeLight" parent="ThemeBaseLight">
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/grey_material</item>

    </style>

    <style name="PopupThemeLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/grey_light_mega_ultra</item>
    </style>


    <style name="TextApperance.Album.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextApperance.Artist.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00666666</item>
    </style>


    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView">
        <item name="cardBackgroundColor">@color/window_background</item>
    </style>

    <style name="CardViewStyle.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/window_background_dark</item>
    </style>

    <style name="CardViewStyle.Black" parent="CardView">
        <item name="cardBackgroundColor">@color/window_background_black</item>
    </style>

</resources>
